= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Songs' }

- content_for :script do
  = stylesheet_for "audiojs/index.css"
  = javascript_include_tag "audiojs/audio.min.js"

  :javascript
    audiojs.events.ready(function() {
      var as = audiojs.createAll();
    });

= simple_form_for([:admin, @product, @song]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :mp3
    = audio_tag @song.mp3, :preload=>"auto"
    

  .form-actions
    = f.button :submit
    = link_to 'Back', admin_product_songs_url(@product), :class => 'btn'
