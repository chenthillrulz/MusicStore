%h1 Listing videos

%table
  %tr
    %th
    %th Name
    %th Url
    %th Product

  - @videos.each do |video|
    %tr
      %td
        .btn-group
          %button{:class=>'btn btn-primary dropdown-toggle btn-mini', :data=>{:toggle => 'dropdown'}}
            Action
            %span{:class => 'caret'}
          %ul{:class=>"dropdown-menu"}
            %li
              = link_to 'Show', video 
            %li
              = link_to 'Edit', edit_review_path(video)
            %li
              = link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete
      %td= video.name
      %td= video.url
      %td= video.product

%br

= link_to 'New Video', new_video_path
