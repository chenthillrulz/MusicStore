= simple_form_for @video do |f|
  - if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name, :input_html => {:class=>"span5"}
  = f.input :url,  :input_html => {:class=>"span5"}
  .actions
    = f.submit 'Save'
