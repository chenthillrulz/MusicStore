= simple_form_for(@gallery) do |f|
	%legend
		Legend
	= f.error_notification
	= f.input :name
	.row-fluid
		.gallery_preview.span6
			= f.input :image, as: :image_preview, input_html: {preview_version: :thumb}, :label_html => {:class => 'invisible'}
		.gallery_text_preview.span6
			= f.input :content, :as => :ckeditor, :input_html => {:class => 'editable span5'}
	= f.button :submit
